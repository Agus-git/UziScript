var trigPin;
var echoPin;
var maxDistance = 100;

var distance;

proc init(trig, echo, maxDist) {
  trigPin = trig;
  echoPin = echo;
  maxDistance = maxDist;
}

task reading() stopped 10/s {
	distance = sonarDistCm(trigPin, echoPin, maxDistance);
}

func distance_cm() {
  return distance;
}

func distance_mm() {
  return distance * 10;
}

func distance_m() {
  return distance / 100;
}
