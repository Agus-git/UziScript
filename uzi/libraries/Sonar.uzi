var trigPin;
var echoPin;
var maxDistance = 100;

proc init(trig, echo, maxDist) {
  trigPin = trig;
  echoPin = echo;
  maxDistance = maxDist;
}

func distance_cm() {
  return sonarDistCm(trigPin, echoPin, maxDistance);
}

func distance_mm() {
  return sonarDistCm(trigPin, echoPin, maxDistance) * 10;
}

func distance_m() {
  return sonarDistCm(trigPin, echoPin, maxDistance) / 100;
}
