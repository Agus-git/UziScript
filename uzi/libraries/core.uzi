proc playTone(pin, tone, ms) {
  startTone(pin, tone);
  delayMs(ms);
  stopTone(pin);
}

proc stopToneAndWait(pin, ms) {
  stopTone(pin);
  delayMs(ms);
}

func map(value, fromLow, fromHigh, toLow, toHigh) {
  return (value - fromLow) * (toHigh - toLow) / (fromHigh - fromLow) + toLow;
}
