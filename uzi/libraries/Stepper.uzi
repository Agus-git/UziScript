var m1 = 8;
var m2 = 9;
var m3 = 10;
var m4 = 11;
var delay = 100;

proc step(numberOfSteps)
{
repeat(numberOfSteps)
{
	turnOn(m1);
	turnOff(m2);
	turnOn(m3);
	turnOff(m4);
	delayMs(delay);
	turnOff(m1);
	turnOn(m2);
	turnOn(m3);
	turnOff(m4);
	delayMs(delay);
	turnOff(m1);
	turnOn(m2);
	turnOff(m3);
	turnOn(m4);
	delayMs(delay);
	turnOn(m1);
	turnOff(m2);
	turnOff(m3);
	turnOn(m4);
	delayMs(delay);
}
turnOff(m1);
turnOff(m2);
turnOff(m3);
turnOff(m4);
}