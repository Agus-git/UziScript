var enablePin;
var forwardPin;
var reversePin;

proc init(en, f, r) {
	enablePin = en;
	forwardPin = f;
	reversePin = r;
}

proc forward(speed) {
	turnOff(reversePin);
	turnOn(forwardPin);
	write(enablePin, speed);
}

proc backward(speed) {
	turnOff(forwardPin);
	turnOn(reversePin);
	write(enablePin, speed);
}

proc brake(speed) {
	turnOn(forwardPin);
	turnOn(reversePin);
	turnOff(enablePin);
}

proc speed(speed) {
	write(enablePin, speed);
}