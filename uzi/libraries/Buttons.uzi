var debounceMs = 50;

prim isPressed : isOn;
prim isReleased : isOff;

proc waitForRelease(pin) {
	until isPressed(pin);
	delayMs(debounceMs);
	until isReleased(pin);
	delayMs(debounceMs);
}

proc waitForPress(pin) {
	until isReleased(pin);
	delayMs(debounceMs);
	until isPressed(pin);
	delayMs(debounceMs);
}

func waitLongPress(pin) {
	until isPressed(pin);
	var begin = millis();
	delayMs(debounceMs);
	until isReleased(pin);
	delayMs(debounceMs);
	return millis() - begin;
}
